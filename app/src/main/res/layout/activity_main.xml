<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Enter Stock Quote"
            android:id="@+id/symbolEntry"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Quote"
            android:id="@+id/quoteButton"/>
    </LinearLayout>

    <TextView
        android:id="@+id/data_symbol"
        style="@style/DetailTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/data_price"
            style="@style/DetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/data_change"
            style="@style/DetailChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/static_leftparen"
            style="@style/DetailChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(" />

        <TextView
            android:id="@+id/data_chgpct"
            style="@style/DetailChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/static_rightparen"
            style="@style/DetailChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/row_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/static_open"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open" />

            <TextView
                android:id="@+id/data_open"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/row_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/static_high"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High" />

            <TextView
                android:id="@+id/data_high"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/row_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/static_low"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low" />

            <TextView
                android:id="@+id/data_low"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/row_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/static_volume"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume" />

            <TextView
                android:id="@+id/data_volume"
                style="@style/DetailOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/data_updated"
        style="@style/DetailSubtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="20dp"/>

</LinearLayout>